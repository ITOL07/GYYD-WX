/**index.wxss**/
.index_head{
  width: 95%;
  height: 320rpx;
  margin: 3% 2.5%;
}
.index_head .swiper_image{
  width:100%;
  height:100%; 
  display:inline-block;
}

/*导航*/
.nav_top{
  width:95%;
  height: 55rpx;
	font-size: 30rpx;
  color:#333333;
  margin: 2% 2.5%;
}
.scroll_body2{
  width: 95%;
  height: 300rpx;
  margin: 0 2.5%;
  display:flex;
  flex-direction:row;
  white-space: nowrap;
}
.nav_bottom{
  width: auto;
  height: 300rpx;
  display:flex;
  flex-direction:row;
  box-sizing:border-box;
}
.nav_bottom .nav_all{
  width: 210rpx;
  height: 100%;
	background-color: #FFFFFF;
  margin-right: 10rpx;
  display:inline-block;
  flex-direction:column;
}
.nav_bottom .nav_all image{
  width: 210rpx;
  height: 208rpx;
}
.nav_bottom .nav_all text{
  width: 100%;
  font-size: 22rpx;
	color: #666666;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  display:block;
	margin-left: 13rpx;
}
/*列表*/
.nav_bottom2{
	width: 100%;
	background-color: #FFFFFF;
	padding: 5% 2.5% 2%;
	margin-top: 5%;
}
.title{
	font-size: 30rpx;
	color: #333333;
}
.list{
  width: 100%;
	background-color: #FFFFFF;
	padding: 0 2.5%;
}
.list_data{
  width:100%;
  height: 214rpx;
	font-size: 22rpx;
  color:#666666;
	border-bottom: 2rpx solid #EEEEEE;
  box-sizing:border-box;
	padding: 5% 0;
}
.list_data_item{
  width:100%;
  height:100%;
  display:flex;
  flex-direction:row;
  justify-content:space-around;
}
.list_left{
  width:20%;
  height: 100%;
} 
.list_left image{
  width: 120rpx;
  height: 120rpx;
	border-radius: 50%;
}
.list_right{
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: column;
	justify-content: space-around;
}
.right1{
  display: flex;
  flex-direction:row;
}
.right1 view:nth-child(1){
	width: 70%;
}
.right1_name{
	font-size: 30rpx;
	color: #333333;
	margin-right: 15rpx;
}
.right1 view:nth-child(2){
	width: 22%;
	font-size: 22rpx;
	color: #F85F58;
	text-align: right;
}
.right1_prince text:nth-child(2){
	font-size: 32rpx;
}
.right2{
	width: 27%;
  display: flex;
  flex-direction:row;
	justify-content: space-around;
}
.right2 image{
  width:20rpx;
  height:20rpx;
}
.right2 text{
  font-size:22rpx;
	line-height: 22rpx;
  color: #333333;
}
.right3 text{
	width: 95%;
  font-size: 22rpx;
	color: #666666;
	overflow:hidden; 
	text-overflow:ellipsis;
	display: inline-block; 
	-webkit-line-clamp: 1;
	-webkit-box-orient:vertical;
	white-space: nowrap;
}