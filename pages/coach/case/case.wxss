/* pages/case/case.wxss */
.top{
  width:90%;
  height:80%;
  border-radius:50rpx;
  background:#F9CE0E;
  margin-top:30rpx;
  padding-top:30rpx;
}
.footer{
  width:100%;
  height:20%;
}
.title{
  width:100%;
  height:200rpx;
}
.title image{
  display:block;
  width:100rpx;
  height:100rpx;
  margin:20rpx auto;
}
.title text{
  color:#333333;
  text-align:center;
  font-size:35rpx;
  display:block;
}
.result{
  width:100%;
  height:auto;
  display:flex;
  flex-direction:column;
}
.result .text1{
  color:#333333;
  background:#FFFFFF;
  width:200rpx;
  height:80rpx;
  border-top-right-radius:50rpx;
  border-bottom-right-radius:50rpx;
  text-align:center;
  line-height:80rpx;
  font-size:35rpx;
}
.result .text2{
  width:90%;
  margin:30rpx auto;
  color:#333333;
  font-size:28rpx;
}
.compare{
  width:100%;
  height:auto;
  display:flex;
  flex-direction:column;
}
.compare text{
  color:#333333;
  background:#FFFFFF;
  width:200rpx;
  height:80rpx;
  border-top-right-radius:50rpx;
  border-bottom-right-radius:50rpx;
  text-align:center;
  line-height:80rpx;
  font-size:35rpx;
}
.compare_img{
  display:flex;
  flex-direction:row;
  margin:40rpx auto;
}
.compare_img image{
  display:block;
  width:200rpx;
  height:200rpx;
  margin-bottom:80rpx;
}
.footer{
  width:30%;
  height:200rpx;
  margin:50rpx auto;
  display:flex;
  flex-direction:row;
  justify-content:space-between;
}
.footer image{
  display:block;
  width:50rpx;
  height:50rpx;
  margin-top:30rpx;
}