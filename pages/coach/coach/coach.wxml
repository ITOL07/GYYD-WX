<!--pages/coach/coach.wxml-->
<view class="container">
  <scroll-view scroll-y="true" class="scroll_body">
    <view class="head">
      <image src="../../../static/images/store/mendian.png"></image>
      <text>选择教练</text>
    </view>
    <view class="bottom">
   
     <view wx:for="{{coachList}}" wx:key="this" class="list_data" id="{{item.coach_Id}}" data-coach_id="{{item.coach_Id}}" bindtap='coachClick'>
   
       <view class="list_left">
        <image src="{{item.icon}}"></image>
      </view>
      <view class="list_right">
            <view class="right1">
              <text class="right1_name">{{item.name}}</text>
              <text class="right1_title">{{item.tel}}</text>
              <text class="right1_price">￥{{item.min_price}}/课起</text>
            </view>
            <view class="right2">
              <image src="../../../static/images/littleicon/xing1.png"></image>
              <image src="../../../static/images/littleicon/xing1.png"></image>
              <image src="../../../static/images/littleicon/xing1.png"></image>
              <image src="../../../static/images/littleicon/xing1.png"></image>
              <image src="../../../static/images/littleicon/xing1.png"></image>
              <text>{{item.score}}</text>
            </view>
            <view class="right3">
              <text>擅长：{{item.comment}}</text>
            </view>
      </view>
      </view>
    </view>
  </scroll-view>
</view>