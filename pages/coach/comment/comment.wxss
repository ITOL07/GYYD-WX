/* pages/comment/comment.wxss */
.comment{
  width:100%;
  height:auto;
  display:flex;
  flex-direction:column;
  background:#FFFFFF;
}
.comment_title{
  width:90%;
  height:100rpx;
  display:flex;
  flex-direction:row;
  margin:10rpx auto;
}
.comment_title .comment_title_head{
  width:20%;
  height:100%;
}
.comment_title .comment_title_head image{
  display:block;
  width:100rpx;
  height:100rpx;
}
.comment_title .comment_title_name{
  width:50%;
  height:100%;
  display:flex;
  flex-direction:column;
  padding-top:1%;
}
.comment_title .comment_title_name .text1{
  font-size:35rpx;
  color:#333333;
  margin-bottom:1%;
}
.comment_title .comment_title_name .text2{
  font-size:28rpx;
  color:#999999;
}
.comment_title .xing{
  width:30%;
  height:100%;
  display:flex;
  flex-direction:row;
  padding-top:5%;
  
}
.comment_title .xing image{
  display:block;
  width:20rpx;
  height:20rpx;
  margin-right:10rpx;
}
.content{
  width:90%;
  height:auto;
  margin-left:3%;
}
.content text{
  font-size:26rpx;
  color:#666666;
}
.comment_img{
  width:90%;
  height:200rpx;
  display:flex;
  flex-direction:row;
  margin:20rpx auto;
}
.comment_img image{
  display:block;
  width:200rpx;
  height:200rpx;
  margin-right:20rpx;
}
.comment_footer{
  width:90%;
  height:100rpx;
  margin:0 auto;
}
.comment_footer text{
  color:#999999;
  font-size:28rpx;
}