.detail_store{
  width: 100%;
  background:#FFFFFF;
  display: flex;
  flex-direction: column;
}
.store_header{
  width:100%;
  height: 85rpx;
  margin-left:3%;
	line-height: 100rpx;
}
.store_header text{
  font-size: 30rpx;
  color:#333333;
}
.store_list{
  width:100%;
}
.list_data{
  width: 100%;
  height: 214rpx;
  box-sizing:border-box;
  color:#666666;
	border-bottom: 2rpx solid #EEEEEE;
  padding: 0 2.5%;
  display:flex;
  flex-direction:row;
  justify-content:space-around;
	align-items: center;
}
.list_left{
  width:20%;
} 
.list_left image{
  width: 120rpx;
  height: 120rpx;
}
.list_right{
  width:70%;
  display: flex;
  flex-direction: column;
	justify-content: space-around;
}
.right1{
	width: 100%;
  display: flex;
  flex-direction:row;
}
.right1_name{
  width: 50%;
}
.right1_name text:nth-child(1){
	font-size: 32rpx;
	color: #333333;
}
.right1_name text:nth-child(2){
	font-size: 22rpx;
	color: #666666;
	margin-left: 3%;
}
.right1_price{
  width: 50%;
  text-align:right;
}
.right1_price text:nth-child(1), .right1_price text:nth-child(3){
	font-size: 22rpx;
	color: #F85F58;
}
.right1_price text:nth-child(2){
	font-size: 32rpx;
	color: #F85F58;
}
.right2{
	width: 35%;
  display: flex;
  flex-direction:row;
	justify-content: space-between;
	align-items: center;
  margin-top: 20rpx;
}
.right2 image{
  width: 19rpx;
  height: 19rpx;
}
.right2 text{
  font-size: 22rpx;
  color: #333333;
}
.right3 text{
  font-size: 22rpx;
  color: #666666;
}
.scroll_body2{
  width:90%;
  height:320rpx;
  display:flex;
  flex-direction:row;
  white-space: nowrap;
  margin:0 auto;
}