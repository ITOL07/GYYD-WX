/* pages/storedetail/storedetail.wxss */
.detail_header{
  width: 91%;
  height: 230rpx;
  display: flex;
  flex-direction: row;
	align-items: center;
  background:#ffffff;
  padding-right: 6%;
	padding-left: 3%;
	border-bottom: 2rpx solid #EEEEEE;
}
.header_left{
  width:25%;
	margin-right: 3%;
}
.header_left image{
  width:150rpx;
  height:150rpx;
}
.header_right{
  width:65%;
  display:flex;
  flex-direction:column;
	justify-content: space-around;
}
.title{
  color:#333333;
  font-size: 30rpx;
}
.addr{
  font-size:22rpx;
  color:#666666;
  margin-top:20rpx;
  margin-bottom:20rpx;
}
.phone{
	font-size:22rpx;
  color:#666666;
  display:flex;
  flex-direction:row;
}
.phone view:nth-child(1){
	width: 50%;
}
.phone view:nth-child(2){
	width: 47%;
	text-align: right;
	margin-right: 3%;
}

.detail_experience{
  width: 100%;
  height: 594rpx;
  background:#FFFFFF;
	padding-bottom: 30rpx;
}
.experience_header{
  width:100%;
  height: 100rpx;
	line-height: 100rpx;
  margin-left:3%;
}
.experience_header text{
  font-size:30rpx;
  color:#333333;
}
.listall{
  width:100%;
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
}
.experience_list{
  width: 44%;
  height: 490rpx;
	margin: 0 3%;
  display:flex;
  flex-direction:column;
	justify-content: space-around;
}
.experience_list image{
  width: 320rpx;
  height: 260rpx;
}
.text1{
  font-size: 30rpx;
  color: #666666;
}
.experience_list .text2{
  font-size: 22rpx;
  color: #999999;
	overflow: hidden;
	-webkit-line-clamp: 1;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.buy{
  display:flex;
  flex-direction:row;
  width:100%;
  align-items:center;
}
.buy view{
  color:#F85F58;
  width: 65%;
}
.buy view text:nth-child(1), .buy view text:nth-child(3){
	font-size: 22rpx;
}
.buy view text:nth-child(2){
	font-size: 32rpx;
}
.experience_list button{
  width:30%;
  height:50rpx;
  border-radius:20rpx;
  font-size:18rpx;
  text-align:center;
  color:#FBBE44;
  border:1px solid #FBBE44;
  line-height:50rpx;
}

.detail_private{
  width: 100%;
	height: 594rpx;
	padding-bottom: 30rpx;
  background:#FFFFFF;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}
.private_header{
  width:100%;
  height: 100rpx;
	line-height: 100rpx;
  margin-left: 3%;
}
.private_header text{
  font-size:30rpx;
  color:#333333;
}
.private_list{
  width: 44%;
  height: 490rpx;
	margin: 0 3%;
  display:flex;
  flex-direction:column;
	justify-content: space-around;
}
.private_list image{
  width: 320rpx;
  height: 260rpx;
}
.private_list .text1{
  font-size: 30rpx;
  color:#666666;
}
.private_list .text2{
	font-size: 22rpx;
  color: #999999;
	overflow: hidden;
	-webkit-line-clamp: 1;
	text-overflow: ellipsis;
