/* pages/storeinfo/storeinfo.wxss */
.detail_header{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
}
.detail_header .header_left{
  width:30%;
  height:100%;
  margin-left:5%;
}
.detail_header .header_left image{
  display:block;
  width:200rpx;
  height:200rpx;
}
.detail_header .header_right{
  width:60%;
  height:100%;
  display:flex;
  flex-direction:column;
}
.detail_header .header_right .title{
  color:#333333;
  font-size:40rpx;
}
.detail_header .header_right text{
  font-size:30rpx;
  color:#666666;
}
.detail_header .header_right .phone{
  display:flex;
  flex-direction:row;
}
.detail_header .header_right image{
  display:block;
  width:30rpx;
  height:30rpx;
}

.store_middle{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
  padding-left:5%;
}
.middle_top{
  width:100%;
  height:50%;
} 
.line{
  color:#F9CE0E;
}
.middle_top .txt{
  color:#333333;
  font-size:40rpx;
  margin-left:2%;
}
.middle-bottom{
  width:100%;
  height:50%;
}
.middle_bottom{
  font-size:30rpx;
  color:#666666;
  margin-left:4%;
}
.store_facilities text{
  background:#EEEEEE;
}
.map{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
  padding-left:5%;
}
.map .middle_top{
  width:100%;
  height:30%;
}
.map image{
  display:block;
  width:80%;
  height:70%;
}
.storeimg{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
  padding-left:5%;
}
.storeimg .middle_top{
  width:100%;
  height:30%;
}