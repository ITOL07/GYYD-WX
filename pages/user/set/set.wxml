<!--pages/set/set.wxml-->
<view class="container">
  <view wx:if="{{phoneNo!=null}}" class="top" bindtap="bindPhone">
    <text>绑定手机号</text>
    <!-- <text>136****2345 ></text>  -->
    <text>{{phoneNo}} ></text> 
  </view>
  <view class="top" bindtap='forgetPass'>
    <text>修改密码</text>
    <text>></text> 
  </view>
  <!-- <view wx:if="{{phoneNo==null}}"> 绑定微信</view> -->
  <view class="top else">
    <text>版本信息</text>
    <text>{{version}}</text>
  </view>
  <button wx:if="{{phoneNo!=null||open_id!=null}}" bindtap="exitClick">退出登录</button>

  <button wx:if="{{open_id!=null}}" bindtap="bindPhone">绑定手机号</button>
  <button wx:if="{{phoneNo!=null}}" bindtap="">绑定微信号</button>
</view>
