<!--pages/orderdetail/orderdetail.wxml-->
<view class="container">
  <view class="header">
    <image src="../icon/course.png"></image>
    <view class="name"> 
      <text class="text1">增肌max</text>
      <text class="text2">私人定制肌肉强化训练</text>
    </view>
    <text>¥220/课起</text>
  </view>
  <view class="count">
    <view class="left">
      <text class="text1">课次</text>
      <text class="text2">（10节起售）</text>
    </view>
    <view class="right">
      <text class="text" bindtap="bindMinus">-</text>
     <input class="text2" type="number" bindchange="bindManual" value="{{num}}" /> 
      <text class="text" bindtap="bindPlus">+</text>
    </view>
  </view>
  <view class="store">
    <text class="text1">门店</text>
    <text class="text2">{{storeListData.name}}</text>
  </view>
  <view class="coach">
    <text class="text1">私教</text>
    <text class="text2">杨晓松</text>
  </view>
  <view class="pay">
    <view class="pay_list">
      <text class="text1">总计</text>
      <text class="text1">¥1760.00</text>
    </view>
    <button bindtap="buyCourse" data-saleid="{{item.courseId}}" data-try_flag="{{item.try_flag}}" data-price="{{item.price}}" data-desc="{{item.name}}">去支付</button>
  </view>
</view>
