/* pages/login/login.wxss */
.container{
  background:#FFFFFF;
}
   
.top{
  width: 88%;
  height: 226rpx;
  margin: 20rpx 6%;
}
.top_item1, .top_item2{
  width: 100%;
  height: 33%;
	border-bottom: 2rpx solid #EEEEEE;
	margin-top: 50rpx;
  display:flex;
  flex-direction:row;
	align-items: center;
}
.top_item1 image{
  display:block;
  width: 17rpx;
  height: 27rpx;
	margin-right: 5%;
}
.top_item2 image{
  display:block;
  width: 25rpx;
  height: 29rpx;
	margin-right: 5%;
}
.place{
	font-size: 26rpx;
	color: #999999;
}
.middle{
  width:100%;
  margin-top: 60rpx;
}
.middle button{
  width: 72%;
  height: 84rpx;
  background:#F9CE0E;
  font-size: 32rpx;
  border-radius: 42rpx;
  margin: 27rpx 14%;
}
.reg{
  width: 76%;
	margin: 0 12%;
  display: flex;
  justify-content:space-between;
}
.reg text{
  font-size: 24rpx;
  color: #FAC72C;
}
.bottom{
	width: 100%;
  margin-top:50%;
}
.bottom view{
	width: 100%;
	height: 30rpx;
  font-size: 24rpx;
  color:#999999;
	line-height: 60rpx;
  text-align:center;
  border-bottom: 2rpx solid #EEEEEE;
}
.bottom image{
  display:block;
  width:90rpx;
  height:90rpx;
}
.wxbtn{
  border-radius:50%;
  width:90rpx;
  height:90rpx;
  margin: 60rpx 44%;
  padding: 0;
}