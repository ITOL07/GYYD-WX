<view class="container">
  <scroll-view scroll-y="true" class="scroll_body">
		<view class="top">
			<text id="0" class="{{flag=='0'?'focus':''}}" bindtap="tab">全部</text>
			<text id="1" class="{{flag=='1'?'focus':''}}" bindtap="tab">待支付</text>
			<text id="2" class="{{flag=='2'?'focus':''}}" bindtap="tab">已支付</text>
		</view>
    <view class="bottom" wx:if="{{orderData.length>=1}}">
      <view wx:for="{{orderData}}" wx:key="this">
				<view class="list">
					<view class="list_top">
						<text>订单号:{{item.orderNo}}</text>
						<text>{{item.tradeStateDesc}}</text>
					</view>
					<view class="list_middle">
						<image src="{{item.imgurl}}"></image>
						<view class="detail">
							<view>
								<text>{{item.desc}}</text>
								<view>
									<text>￥</text>
									<text>{{item.amount}}</text>
								</view>
							</view>
							<text>{{item.brief}}</text>
							<text>{{item.coachName}} ({{item.clubName}})</text>
						</view>
					</view>
					<view class="list_bottom">
						<text>下单时间：{{item.recvTime}}</text>
							<view wx:if="{{item.tradeStateDesc=='待付款'}}">
							<button>取消订单</button>
							<button>支付</button>
						</view>
					</view>
				</view>
			</view>
    </view>
		<view class="tips" wx:else>
			您还没有下订单!
		</view>
  </scroll-view>
</view>
