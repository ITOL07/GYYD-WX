/* top */
.top{
	width: 94%;
	height: 90rpx;
	background-color: #FFFFFF;
	padding: 0 3%;
	display: flex;
	flex-direction: row;
	align-items: center;
}
.top text{
	width: 33%;
	font-size: 32rpx;
	color: #999999;
	display: block;
	text-align: center;
}
.top .focus{
	color: #FBC049;
}

/* bottom */
.bottom{
  width: 95%;
	margin: 14rpx 2.5%;
}
.list{
  width: 95%;
  height: 285rpx;
  background:#FFFFFF;
	padding: 2.5%;
	margin: 20rpx 0;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
}
.list_top{
  width:100%;
  display:flex;
  flex-direction:row;
  justify-content:space-between;
}
.list_top text:nth-child(1){
  color:#666666;
  font-size: 22rpx;
}
.list_top text:nth-child(2){
  color:#666666;
  font-size: 30rpx;
}
.list_middle{
  width:100%;
  display:flex;
  flex-direction:row;
	align-items: center;
	justify-content: space-between;
}
.list_middle view:nth-child(1){
	position: relative;
}
.list_middle image{
  width:120rpx;
  height:120rpx;
	border-radius: 8rpx;
}
.space{
	width: 47rpx;
	height: 26rpx;
	background-color: #FBBE44;
	border-radius: 4rpx;
	font-size: 20rpx;
	color: #333333;
	text-align: center;
	line-height: 26rpx;
	position: absolute;
	top: 0;
	left: 0;
}
.detail{
  width: 78%;
	height: 150rpx;
  display:flex;
  flex-direction:column;
	justify-content: space-around;
}
.detail view:nth-child(1){
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}
.detail view text:nth-child(1){
	font-size: 30rpx;
	color: #333333;
}
.detail view view text:nth-child(1){
	font-size: 22rpx;
	color: #F85F58;
}
.detail view view text:nth-child(2){
	font-size: 32rpx;
	color: #F85F58;
}
.detail text:nth-child(2){
	font-size: 22rpx;
	color: #999999;
	overflow: hidden;
	-webkit-line-clamp: 1;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.detail text:nth-child(3){
	font-size: 30rpx;
	color: #666666;
}
.list_bottom{
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}
.list_bottom text{
  color:#999999;
  font-size: 22rpx;
}
.list_bottom view{
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center; 
}
.list_bottom button:nth-child(1){
  width: 150rpx;
  height: 50rpx;
	background-color: #EEEEEE;
  border-radius: 25rpx;
  font-size: 22rpx;
  text-align:center;
  color:#333333;
  line-height:50rpx;
  border: 1px solid #FFFFFF;
	margin-right: 20rpx;
}
.list_bottom button:nth-child(2){
  width: 150rpx;
  height: 50rpx;
	background-color: #F9CE0E;
  border-radius: 25rpx;
  font-size: 22rpx;
  text-align:center;
  color:#333333;
  line-height:50rpx;
  border: 1px solid #FFFFFF;
}
.tips{
	width: 100%;
	height: 80rpx;
	font-size: 28rpx;
	color: #666666;
	line-height: 80rpx;
	text-align: center;
}