/* component/stepper/stepper.wxss */
/*全局样式*/ 
page { 
  padding: 0rpx 0; 
} 
   
/*主容器*/ 
.stepper { 
  width: 97rpx; 
  height: 50rpx; 
  /*给主容器设一个边框*/ 
  border: 2rpx solid #ccc; 
  border-radius: 2rpx; 
  margin:0 auto; 
} 
   
/*加号和减号*/ 
.stepper text { 
  width: 12rpx; 
  line-height: 50rpx; 
  text-align: center; 
  float: left; 
} 
   
/*数值*/ 
.stepper input { 
  width: 50rpx; 
  height: 50rpx; 
  float: left; 
  margin: 0 auto; 
  text-align: center; 
  font-size: 20rpx; 
  /*给中间的input设置左右边框即可*/ 
  border-left: 2rpx solid #ccc; 
  border-right: 2rpx solid #ccc; 
} 
   
/*普通样式*/ 
.stepper .normal{ 
  color: black; 
} 
   
/*禁用样式*/ 
.stepper .disabled{ 
  color: #ccc; 
}